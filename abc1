    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            margin: 20px;
        }
        input {
            width: 80%;
            padding: 10px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }
        button {
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        button:hover {
            background-color: #0056b3;
        }
        .output {
            margin-top: 20px;
            font-size: 1.2em;
            word-wrap: break-word;
        }
    </style>
</head>
<body>
    <h1>Dropbox Link Converter</h1>
    <p>Enter your Dropbox link below to convert it into a direct download link.</p>
    <input type="text" id="originalLink" placeholder="Enter your Dropbox link" />
    <br />
    <button onclick="convert()">Convert</button>
    <div class="output">
        <strong>Converted Link:</strong>
        <p id="convertedLink"></p>
    </div>

    <h2>Embed Link Generator</h2>
    <p>Paste the converted link below to generate an embeddable iframe format.</p>
    <input type="text" id="embedLink" placeholder="Paste your converted link here" />
    <br />
    <button onclick="generateEmbed()">Generate Embed Code</button>
    <div class="output">
        <strong>Embed Code:</strong>
        <p id="embedCode"></p>
    </div>

    <script>
        function convertDropboxLink(originalLink) {
            if (!originalLink.includes("dropbox.com")) {
                return "Invalid Dropbox link.";
            }
            return originalLink
                .replace("www.dropbox.com", "dl.dropboxusercontent.com")
                .replace("dropbox.com", "dl.dropboxusercontent.com")
                .replace("?dl=0", "?raw=1");
        }

        function convert() {
            const originalLink = document.getElementById("originalLink").value;
            const convertedLink = convertDropboxLink(originalLink);
            document.getElementById("convertedLink").textContent = convertedLink;
        }

        function generateEmbedCode() {
            const convertedLink = document.getElementById("embedLink").value;
            if (!convertedLink.includes("dl.dropboxusercontent.com")) {
                document.getElementById("embedCode").textContent = "Invalid converted link.";
                return;
            }
            const embedCode = `<div><div style="left: 0; width: 100%; height: 0; position: relative; padding-bottom: 56.25%;"><iframe src="${convertedLink}" style="top: 0; left: 0; width: 100%; height: 100%; position: absolute; border: 0;" allowfullscreen allow="encrypted-media *;"></iframe></div></div><script async src=\"//iframely.net/embed.js\"></script>`;
            document.getElementById("embedCode").textContent = embedCode;
        }
    </script>
</body>
